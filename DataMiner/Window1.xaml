<Window x:Class="DataMiner.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="600" Width="600">
    <Grid Name="Grid" Background="DarkBlue">
        <TextBlock Name="Title"  VerticalAlignment="Top" FontSize="50" HorizontalAlignment="Center" Foreground="Green" Margin="80">
            Econ Project
        </TextBlock>
        <StackPanel Name="SearchChildren" Height="50" Width="170" Orientation="Horizontal">

            <TextBox Name="SearchBox" Width="111" Height="20" MouseDown="searchBoxMouseDown" GotKeyboardFocus="searchBoxMouseDown">
                Enter Stock Symbol
            </TextBox>
            <Button Name="SearchButton" Width="50" Height="20" Content="Search" Click="searchButtonClick" />
        </StackPanel>
        <StackPanel Name="ImagePanel"></StackPanel>
        
    </Grid>
</Window>
